@model Contracts.ManagementExpenseContracts.ExpenseContracts.ExpenseRemoved
@using _0_Framework.Application;
@{
    ViewData["title"] = "لیست مصارف غیرفعال شده";
}
<div class="modal-header">
    <a class="btn btn-sm btn-icon btn-outline-warning" asp-page="./Index"><i class="fa-solid fa-close fa-lg"></i></a>
    <h4 class="modal-title">لیست مصارف غیرفعال شده</h4>
</div>

<div class="modal-body">
    <div class="table-responsive">
        <table class="table table-bordered table-hover display nowrap margin-top-10 w-p100">
            <thead class="table-Primary">
                <tr>
                    <th class="text-center">#</th>
                    <th class="text-center">تاریخ</th>
                    <th class="text-center">توضیحات</th>
                    <th class="text-center">مجموعه</th>
                    <th class="text-center">شماره فاکتور</th>
                    <th class="text-center">توسط</th>
                    <th class="text-center">خزانه</th>
                    <th class="text-center">مبلغ</th>
                    <th class="text-center">اسکن</th>
                    @if (Model.idAgencies == 0)
                    {
                        <th class="text-center">نماینده گی</th>
                    }
                    <th class="text-center">عملیات</th>
                </tr>
            </thead>
            <tbody id="tbodyv">
                @foreach (var item in Model.ExpenseRemoveds)
                {
                    <tr>
                        <td class="text-center"></td>
                        <td class="text-center">@item.Date</td>
                        <td class="text-center">@item.Description</td>
                        <td class="text-center">@item.CollectionName</td>
                        <td class="text-center">@item.N_Invoice</td>
                        <td class="text-center">@item.PersonnelName</td>
                        <td class="text-center">@item.SafeBoxName</td>
                        <td class="text-center">@item.Amount.ToMoney()  <sub>( @item.MoneyName )</sub></td>
                        <td class="text-center">
                            <a href="#">
                                @if (item.Ph_Invoice != null && item.Ph_Invoice != "")
                                {
                                    <img class="ProfilePhoto" src="~/Uploader/@item.Ph_Invoice" alt="Ph_Invoice">
                                }
                                else
                                {
                                    <img class="ProfilePhoto" src="~/notify.svg" alt="Ph_Invoice">
                                }
                            </a>
                        </td>
                        @if (Model.idAgencies == 0)
                        {
                            if (item.AgenciesId == 0)
                            {
                                <td class="text-center">مرکزی</td>
                            }
                            else
                            {
                                <td class="text-center">@item.AgenciesName</td>
                            }
                        }
                        <td class="text-center">
                            <a class="btn btn-sm btn-icon btn-outline-danger" title="فعال کردن" onclick="Active(@item.Id)"><i class="fa-solid fa-check fa-lg"></i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>