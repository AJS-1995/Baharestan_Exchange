@model Contracts.CompanyContracts.CompanyEdit
@{
    ViewData["title"] = "ویرایش کمپنی";
}
<div class="modal-header">
    <h4 class="modal-title">ویرایش @Model.Name</h4>
    <a class="btn btn-sm btn-icon btn-outline-warning" asp-page="./Index"><i class="fa fa-close"></i></a>
</div>

<form class="needs-validation" novalidate asp-page="/Index" asp-page-handler="CompanyEdit" method="post"
      data-ajax="true"
      data-callback=""
      data-action="Refresh"
      enctype="multipart/form-data">
    <div class="modal-body">
        <div class="row">
            <div class="col-sm-12">
                <div class="form-group">
                    <label class="form-label" for="Name">نام کامل</label>
                    <input id="Name" type="text" class="form-control" required asp-for="Name">
                    <div class="invalid-feedback">اطلاعات باید وارد شود !</div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-12">
                <div class="form-group">
                    <label class="form-label" for="Address">آدرس</label>
                    <input id="Address" type="text" class="form-control" required asp-for="Address">
                    <div class="invalid-feedback">اطلاعات باید وارد شود !</div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-6">
                <div class="form-group">
                    <label class="form-label" for="Responsible">مسئول</label>
                    <input id="Responsible" type="text" class="form-control" required asp-for="Responsible">
                    <div class="invalid-feedback">اطلاعات باید وارد شود !</div>
                </div>
            </div>
            <div class="col-sm-6">
                <div class="form-group">
                    <label class="form-label" for="Mobile">موبایل</label>
                    <input id="Mobiles" dir="ltr" type="text" class="form-control" required asp-for="Mobile">
                    <div class="invalid-feedback">اطلاعات باید وارد شود !</div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-12">
                <div class="form-group">
                    <label for="Logo" class="form-label">لوگو</label>
                    <input type="file" id="Logo" class="form-control" name="Logo" accept="image/*">
                </div>
            </div>
        </div>
        <input type="hidden" asp-for="Id" value="@Model.Id" />
        <div class="modal-footer">
            <button type="submit" class="btn btn-sm btn-icon btn-outline-success"><i class="fa fa-save"></i></button>
        </div>
    </div>
</form>