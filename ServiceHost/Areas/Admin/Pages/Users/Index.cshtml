    <script>
        function addRowCount(tableAttr) {
            $(tableAttr).each(function () {
                $('th:first-child, thead td:first-child', this).each(function () {
                    var tag = $(this).prop('tagName');
                    $(this).before('<' + tag + ' class="text-center" >#</' + tag + '>');
                });
                $('td:first-child', this).each(function (i) {
                    $(this).before('<td class="text-center">' + (i + 1) + '</td>');
                });
            });
        }
        addRowCount('.js-serial');
    </script>
    <script>
        function InActive(id, idAgencies) {
            if (idAgencies == 0) {
                Swal.fire({
                    icon: "error",
                    title: "باخبر",
                    text: "امکان غیرفعال کردن مدیر سیستم وجود ندارد",
                    confirmButtonText: 'باشه'
                });
            } else {
                Swal.fire({
                    title: 'آیا میخواهید کاربر غیر فعال شود ؟',
                    text: "پس میتوانید فعال کنید !",
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: '#3085d6',
                    cancelButtonColor: '#d33',
                    cancelButtonText: 'خیر',
                    confirmButtonText: 'بلی'
                }).then((result) => {
                    if (result.isConfirmed) {
                        var postData = {
                            'id': id,
                        };
                        $.ajax({
                            ccontentType: 'application/x-www-form-urlencoded',
                            dataType: 'json',
                            type: "GET",
                            url: "@Url.Page("./Index", "InActive")",
                            data: postData,
                            success: function (date) {
                                if (date.isSuccedded == true) {
                                    Swal.fire({
                                        position: 'center',
                                        icon: 'success',
                                        title: date.message,
                                        showConfirmButton: false,
                                        timer: 2000
                                    });
                                    setTimeout(function () {
                                        window.location.reload(1);
                                    }, 2500);
                                } else {
                                    Swal.fire({
                                        position: 'center',
                                        icon: 'warning',
                                        title: date.message,
