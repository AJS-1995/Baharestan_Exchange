@model Contracts.PersonnelContracts.PersonnelRemoved
@{
    ViewData["title"] = "لیست کارمندان حذف شده";
}
<div class="modal-header">
    <a class="btn btn-sm btn-icon btn-outline-warning" asp-page="./Index"><i class="fa-solid fa-close fa-lg"></i></a>
    <h4 class="modal-title">لیست کارمندان حذف شده</h4>
</div>

<div class="modal-body">
    <div class="table-responsive">
        <table class="table table-bordered table-hover display nowrap margin-top-10 w-p100 js-serial">
            <thead class="table-Primary">
                <tr>
                    <th class="text-center">#</th>
                    <th class="text-center">نام - نام پدر</th>
                    <th class="text-center">شماره تماس</th>
                    <th class="text-center">نمبرتذکره</th>
                    <th class="text-center">آدرس</th>
                    <th class="text-center">عکس</th>
                    @if (Model.idAgencies == 0)
                    {
                        <th class="text-center">نماینده گی</th>
                    }
                    <th class="text-center">عملیات</th>
                </tr>
            </thead>
            <tbody id="tbodyv">
                @foreach (var item in Model.PersonnelRemoveds)
                {
                    <tr>
                        <td class="text-center"></td>
                        <td class="text-center">@item.FullName - @item.Fathers_Name</td>
                        <td class="text-center" dir="ltr">@item.Mobile</td>
                        <td class="text-center">@item.Cart_Id</td>
                        <td class="text-center">@item.Address</td>
                        @if (Model.idAgencies == 0)
                        {
                            if (item.AgenciesId == 0)
                            {
                                <td class="text-center">مرکزی</td>
                            }
                            else
                            {
                                <td class="text-center">@item.AgenciesName</td>
                            }
                        }
                        <td class="text-center">
                            <a href="#">
                                @if (item.Photo != null && item.Photo != "")
                                {
                                    <img class="GuarantorPhoto" src="~/Uploader/@item.Photo" alt="Photo">
                                }
                                else
                                {
                                    <img class="GuarantorPhoto" src="~/notify.svg" alt="GuarantorPhoto">
                                }
                            </a>
                        </td>
                        <td class="text-center">
                            <a class="btn btn-sm btn-icon btn-outline-primary" title="بازیابی" onclick="Reset(@item.Id)"><i class="fa-solid fa-check-to-slot fa-lg"></i></a>
                            <a class="btn btn-sm btn-icon btn-outline-danger" title="حذف کامل" onclick="Delete(@item.Id)"><i class="fa-solid fa-eraser fa-lg"></i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>