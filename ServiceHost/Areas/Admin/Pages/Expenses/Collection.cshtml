@model Contracts.ExpenseContracts.CollectionRemoved
@{
    ViewData["title"] = "لیست مجموعه های";
}
<div class="modal-header">
    <a class="btn btn-sm btn-icon btn-outline-warning" asp-page="./Index"><i class="fa-solid fa-close fa-lg"></i></a>
    <h4 class="modal-title">لیست مجموعه های</h4>
</div>

<div class="modal-body">
    <div class="row">
        <a class="col-2 btn btn-sm btn-icon btn-outline-success mx-2" title="ثبت جدید" href="#showmodal=@Url.Page("./Index", "CollectionCreate")"><i class="fa-solid fa-plus fa-lg"></i></a>
        <a class="col-2 btn btn-sm btn-icon btn-outline-danger mx-2" title="حذف شده ها" href="#showmodal=@Url.Page("./Index", "CollectionRemoved")"><i class="fa-solid fa-trash-can fa-lg"></i></a>
        <a class="col-2 btn btn-sm btn-icon btn-outline-warning mx-2" title="غیرفعال ها" href="#showmodal=@Url.Page("./Index", "CollectionActived")"><i class="fa-solid fa-toggle-off fa-lg"></i></a>
    </div>
    <div class="table-responsive">
        <table id="example" class="table table-bordered table-hover display nowrap margin-top-10 w-p100">
            <thead class="table-Primary">
                <tr>
                    <th class="text-center">#</th>
                    <th class="text-center">نام</th>
                    <th class="text-center">توضیحات</th>
                    <th class="text-center">عملیات</th>
                </tr>
            </thead>
            <tbody id="tbodyv">
                @foreach (var item in Model.CollectionRemoveds)
                {
                    <tr>
                        <td class="text-center"></td>
                        <td class="text-center">@item.Name</td>
                        <td class="text-center">@item.Description</td>
                        <td class="text-center">
                            <div class="dropdown dropend">
                                <button class="btn btn-sm btn-icon btn-outline-primary" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="fa-solid fa-ellipsis fa-lg"></i>
                                </button>
                                <ul class="dropdown-menu dropdown-menu-dark">
                                    <li><a class="dropdown-item" title="ویرایش" href="#showmodal=@Url.Page("./Index", "CollectionEdit", new { id = item.Id })">ویرایش</a></li>
                                    <li><a class="dropdown-item" title="حذف" onclick="CollectionRemove(@item.Id)">حذف</a></li>
                                    <li><a class="dropdown-item" title="غیر فعال" onclick="CollectionInActive(@item.Id)">غیرفعال</a></li>
                                    <li><a class="dropdown-item" title="ثبت کننده" href="#showmodal=@Url.Page("./Index", "CollectionSaved", new { id = item.Id })">ثبت کننده</a></li>
                                </ul>
                            </div>
                        </td>

                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>