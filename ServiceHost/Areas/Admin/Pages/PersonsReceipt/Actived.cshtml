@model Contracts.PersonsReceiptContracts.PersonsReceiptRemoved
@using _0_Framework.Application;
@{
    ViewData["title"] = "لیست رسید و برد افراد غیرفعال شده";
}
<div class="modal-header">
    <a class="btn btn-sm btn-icon btn-outline-warning" asp-page="./Index"><i class="fa-solid fa-close fa-lg"></i></a>
    <h4 class="modal-title">لیست رسید و برد افراد غیرفعال شده</h4>
</div>

<div class="modal-body">
    <div class="table-responsive">
        <table class="table table-bordered table-hover display nowrap margin-top-10 w-p100">
            <thead class="table-Primary">
                <tr>
                    <th class="text-center">#</th>
                    <th class="text-center">تاریخ</th>
                    <th class="text-center">توضیحات</th>
                    <th class="text-center">توسط</th>
                    <th class="text-center">شماره فاکتور</th>
                    <th class="text-center">نوع</th>
                    <th class="text-center">مقدار</th>
                    <th class="text-center">خزانه</th>
                    <th class="text-center">پول</th>
                    <th class="text-center">فرد</th>
                    @if (Model.idAgencies == 0)
                    {
                        <th class="text-center">نماینده گی</th>
                    }
                    <th class="text-center">عملیات</th>
                </tr>
            </thead>
            <tbody id="tbodyv">
                @foreach (var item in Model.PersonsReceiptRemoveds)
                {
                    <tr>
                        <td class="text-center"></td>
                        <td class="text-center">@item.Date</td>
                        <td class="text-center">@item.Description</td>
                        <td class="text-center">@item.By</td>
                        <td class="text-center">@item.ReceiptNumber</td>
                        @if (item.Type == false)
                        {
                            <td class="text-center">برد</td>
                        }
                        else
                        {
                            <td class="text-center">رسید</td>
                        }
                        <td class="text-center">@item.Amount</td>
                        <td class="text-center">@item.SafeBoxName</td>
                        <td class="text-center">@item.MoneyName</td>
                        <td class="text-center">@item.PersonName</td>
                        @if (Model.idAgencies == 0)
                        {
                            if (item.AgenciesId == 0)
                            {
                                <td class="text-center">مرکزی</td>
                            }
                            else
                            {
                                <td class="text-center">@item.NameAgencies</td>
                            }
                        }
                        <td class="text-center">
                            <a class="btn btn-sm btn-icon btn-outline-danger" title="فعال کردن" onclick="Active(@item.Id)"><i class="fa-solid fa-check fa-lg"></i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>