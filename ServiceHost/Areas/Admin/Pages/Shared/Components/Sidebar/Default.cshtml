@model _01_QueryManagement.SidebarModel

<aside class="main-sidebar">
    <section class="sidebar">
        <ul class="sidebar-menu" data-widget="tree">

            <li class="user-profile treeview">
                <a asp-page="/Users/Index">
                    @if (Model.UsersQueryModel != null)
                    {
                        @if (Model.UsersQueryModel.ProfilePhoto != null && Model.UsersQueryModel.ProfilePhoto != "")
                        {
                            <img src="~/Uploader/@Model.UsersQueryModel.ProfilePhoto" alt="user">
                        }
                        else
                        {
                            <img src="~/nouser.svg" alt="user">
                        }
                        <span>
                            @if (Model.UsersQueryModel.FullName == "Administrator")
                            {
                                <span class="d-block font-weight-600 font-size-16">مدیر کُل</span>
                            }
                            else
                            {
                                <span class="d-block font-weight-600 font-size-16">@Model.UsersQueryModel.FullName</span>
                            }
                            <span class="email-id text-center">@Model.UsersQueryModel.RolePersian</span>
                        </span>
                    }
                    else
                    {
                        <script>
                            window.location.href = "/Index";
                        </script>
                    }
                </a>
            </li>
            @* <li><a asp-page="/Journal"><i class="fa-solid fa-book"></i><span>روزنامچه</span></a></li> *@
            @* <li><a asp-page="/DailyRate/Index"><i class="fa-solid fa-money-bill-transfer"></i><span>تبدیل اسعار روزانه</span></a></li> *@
            @* <li><a asp-page="/ExchangeRate/Index"><i class="fa-solid fa-comment-dollar"></i><span>تبدیل اسعار</span></a></li> *@
            <li><a asp-page="/ManagementPersons/Persons/Index"><i class="fa-solid fa-people-group"></i><span>مدیریت افراد</span></a></li>
            <li><a asp-page="/SafeBoxs/Index"><i class="fa-solid fa-vault"></i><span>مدیریت صندق ها</span></a></li>
            <li><a asp-page="/ManagementExpenses/Index"><i class="fa-solid fa-flask"></i><span>مدیریت مصارف</span></a></li>
        </ul>
    </section>
</aside>