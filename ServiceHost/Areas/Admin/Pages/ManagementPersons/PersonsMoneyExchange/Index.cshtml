@model ServiceHost.Areas.Admin.Pages.ManagementPersons.PersonsMoneyExchange.IndexModel
@{
}
@section Scripts
{
    <script src="~/Theme/assets/formatter/formatter.js"></script>
    <script src="~/Theme/assets/formatter/jquery.formatter.js"></script>
    <script src="~/Theme/material-rtl/js/formatter.js"></script>
    <script src="~/Theme/assets/datatable/datatables.js"></script>
    <script src="~/Theme/material-rtl/js/data-table.js"></script>
    <script>
        function moneies(moneyId) {
            if (moneyId != "") {
                var personId = document.getElementById('PersonId').value;
                var postData = {
                    'moneyId': moneyId,
                    'personId': personId,
                };
                $.ajax({
                    ccontentType: 'application/x-www-form-urlencoded',
                    dataType: 'json',
                    type: "GET",
                    url: "@Url.Page("./Index", "Money")",
                    data: postData,
                    success: function (date) {
                        document.getElementById('Amount_One').value = date;
                        Plus();
                    },
                });
            }
        }
        function Plus() {
            var amount_One = $("#Amount_One").val();
            var price = $("#Price").val();
            var multiplication = $("#Multiplication");
            var division = $("#Division");
            let a = parseFloat(amount_One);
            let b = parseFloat(price);
            if (Division.checked == true) {
                var total = a / b;
            } else {
                var total = a * b;
            }
            if (total == Infinity) {
                total = 0;
            }
            if (isNaN(total)) {
                total = 0;
            }
            document.getElementById('Amount_Two').value = total.toFixed(2);
        }
    </script>
}