@model Contracts.ManagementPresonsContracts.PersonsReceiptContracts.PersonsReceiptEdit
@{
    ViewData["title"] = "ویرایش رسید و برد افراد";
}
<div class="modal-header">
    <a class="btn btn-sm btn-icon btn-outline-warning" asp-page="./Index" asp-route-personsId="@Model.PersonsId"><i class="fa-solid fa-close fa-lg"></i></a>
    <h4 class="modal-title">ویرایش رسید و برد - @Model.PersonName</h4>
</div>

<form class="needs-validation" novalidate asp-page="./Index" asp-page-handler="Edit" method="post" enctype="multipart/form-data">
    <div class="modal-body">
        <div class="row">
            <div class="form-group col-sm-6">
                <div class="form-check form-check-inline">
                    <input class="form-check-input with-gap radio-col-green" type="radio" asp-for="Type" id="Receipt" checked="" value="true">
                    <label class="form-check-label" for="Receipt">رسید</label>
                </div>
            </div>
            <div class="form-group col-sm-6">
                <div class="form-check form-check-inline">
                    <input class="form-check-input with-gap radio-col-yellow" type="radio" asp-for="Type" id="Slavery" value="false">
                    <label class="form-check-label" for="Slavery">برد</label>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-4">
                <div class="form-group">
                    <label class="form-label" asp-for="Date">تاریخ</label>
                    <input id="Date" dir="ltr" type="text" required class="form-control" asp-for="Date" placeholder="yyyy/mm/dd" maxlength="10">
                    <div class="invalid-feedback">اطلاعات باید وارد شود !</div>
                </div>
            </div>
            <div class="col-sm-8">
                <div class="form-group">
                    <label class="form-label" asp-for="Description">توضیحات</label>
                    <textarea class="form-control" type="text" asp-for="Description" id="Description"></textarea>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-4">
                <div class="form-group">
                    <label class="form-label" asp-for="By">توسط</label>
                    <input id="By" type="text" class="form-control" asp-for="By">
                </div>
            </div>
            <div class="col-sm-4">
                <div class="form-group">
                    <label class="form-label" asp-for="ReceiptNumber">شماره فاکتور</label>
                    <input id="ReceiptNumber" type="text" class="form-control" asp-for="ReceiptNumber">
                </div>
            </div>
            <div class="col-sm-4">
                <div class="form-group">
                    <label class="form-label" asp-for="Amount">مقدار</label>
                    <input id="Amount" type="text" class="form-control input-mask text-start" oninput="moneys(this.value)" data-inputmask="'alias': 'numeric'"
                           required asp-for="Amount">
                    <div class="invalid-feedback">اطلاعات باید وارد شود !</div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-6">
                <div class="form-group">
                    <label class="form-label" asp-for="MoneyId">اسعار</label>
                    <select class="form-control" required asp-for="MoneyId" id="MoneyId"
                            asp-items='new SelectList(Model.Moneys, "Id", "Name")'>
                        <option disabled value="" selected="">اسعار ...</option>
                    </select>
                    <div class="invalid-feedback">اطلاعات باید وارد شود !</div>
                </div>
            </div>
            <div class="col-sm-6">
                <div class="form-group">
                    <label class="form-label" asp-for="SafeBoxId">خزانه</label>
                    <select class="form-control" required asp-for="SafeBoxId" id="SafeBoxId"
                            asp-items='new SelectList(Model.SafeBoxs, "Id", "Name")'>
                        <option disabled value="" selected="">خزانه ...</option>
                    </select>
                    <div class="invalid-feedback">اطلاعات باید وارد شود !</div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-6">
                <div class="form-group">
                    <label for="Fingerprint" class="form-label">نشان انگشت</label>
                    <input type="file" class="form-control" name="Fingerprint" accept="image/*">
                </div>
            </div>
            <div class="col-sm-6">
                <div class="form-group">
                    <label for="Picture" class="form-label">عکس</label>
                    <input type="file" class="form-control" name="Picture" accept="image/*">
                </div>
            </div>
        </div>
        <input type="hidden" asp-for="Id" value="@Model.Id" />
        <input type="hidden" asp-for="PersonsId" value="@Model.PersonsId" />
        <input type="hidden" asp-for="AgenciesId" value="@Model.AgenciesId" />
        <div class="modal-footer">
            <button type="submit" class="btn btn-sm btn-icon btn-outline-success"><i class="fa-solid fa-save fa-lg"> & <i class="fa-solid fa-print"></i></i></button>
        </div>
    </div>
</form>