    <script>
        function livelihood(livelihoodId) {
            if (livelihoodId != "") {
                var postData = {
                    'livelihoodId': livelihoodId,
                };
                $.ajax({
                    ccontentType: 'application/x-www-form-urlencoded',
                    dataType: 'json',
                    type: "GET",
                    url: "@Url.Page("./Index", "Livelihood")",
                    data: postData,
                    success: function (date) {
